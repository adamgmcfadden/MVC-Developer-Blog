<form class="signup-form">
  <div class="login-signup-form">
    <div>
      <h2 class="subtitle">Sign Up</h2>
    </div>
    <div class="form-style">
      <div>
        <label for="username-signup">Username</label>
        <input type="text" class="input-style" id="username-signup" />
      </div>
      <div>
        <label for="email-signup">Email</label>
        <input type="text" class="input-style" id="email-signup" />
      </div>
      <div>
        <label for="password-signup">Password</label>
        <input type="password" class="input-style" id="password-signup" />
      </div>
      <div>
        <button type="submit">Sign Up!</button>
      </div>
      <div class="form-content">
        <a id="signup-login-link" href="/login">Login instead</a>
      </div>
    </div>
  </div>
</form>

<script src="/javascript/signup.js"></script>>