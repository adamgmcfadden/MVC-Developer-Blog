<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-text"> Your Blog Here</label>
      <textarea id="post-text" name="post-text"></textarea>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
  <section>
    <h2>Your Posts</h2>
    <ul>
      {{#each posts as |post|}}
        <li>
          <article class="post">
            <div class="title">
              <h2>{{post.title}}</h2>
            </div>
            <div class="meta">
              by
              {{post.user.username}}
              on
              {{format_date post.created_at}}
              |
              <a href="/post/{{post.id}}">{{post.comments.length}}
                {{format_plural "comment" comments.length}}</a>
            </div>
          </article>
          <a href="/dashboard/edit/{{post.id}}" class="edit-post">Edit post</a>
        </li>
      {{/each}}
    </ul>
  </section>
{{/if}}
<script src="/javascript/add-post.js"></script>