<header>
  <h1 id="dash-title">
    Your Dashboard
  </h1>
</header>
<section>
  <form class="new-post-form">
    <div class="multi-form" id="new-post-strip">
      <div class="subtitle" id="new-post">
        <h2>Create New Post</h2>
      </div>
      <div class="form-style">
        <div>
          <label for="post-title">Title</label>
          <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
          <label for="post-text"> Content</label>
          <textarea id="post-text" name="post-text"></textarea>
        </div>
        <button type="submit" class="btn">Create</button>
      </div>
    </div>
  </form>
</section>

{{! if post exists }}
{{#if posts.length}}
  <section>
    <ul>
      {{! for each post }}
      {{#each posts as |post|}}
        <li class="edit-post">
          <div class="edit-btn-styling">
            <a
              type="submit"
              {{! change href based on post id }}
              href="/dashboard/edit/{{post.id}}"
              class="edit-btn-text"
              {{! show post title }}
            >{{post.title}}
            </a>
            {{! post created when }}
            <div class="date-text">{{format_date post.created_at}}</div>
          </div>
        </li>
      {{/each}}
    </ul>
  </section>
{{/if}}
{{! link to add-post.js }}
<script src="/javascript/add-post.js"></script>